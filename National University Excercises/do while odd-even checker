import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        System.out.println("Try programiz.pro");
        Scanner scanner = new Scanner(System.in);
        
        int i = 1;
        System.out.print("Enter your limit: ");
        int num = scanner.nextInt();
        
        do {
            if (i % 2 == 0) {
                System.out.println("This " + i + " Number is even");
            } else {
                System.out.println("This " + i + " Number is odd");
            }
            
            i++;
            
        } while (i <= num);
        
        System.out.println("Finished checking all numbers up to " + num + ".");
        
        
        
        scanner.close();
    }
}
